@model List<Shirt>

<h3>All Shirts</h3>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <td>Brand</td>
            <td>Gender</td>
            <td>Color</td>
            <td>Size</td>
            <td>Price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Brand</td>
                <td>@item.Gender</td>
                <td>@item.Color</td>
                <td>@item.Size</td>
                <td>@(item.Price.HasValue ? item.Price.Value.ToString("c"):" ")</td>
                <td><a class="btn btn-link" asp-controller="Shirts" asp-action="UpdateShirt" asp-route-shirtid ="@item.ShirtId">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a class="btn btn-primary" asp-controller="shirts" asp-action="CreateShirt">Create</a>
